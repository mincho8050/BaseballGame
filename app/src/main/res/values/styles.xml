<resources>
<!-- 일정 버전부터 Theme Editor가 없어진듯 하다. Resource Manager를 이용한다-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--상단바 안보이게 하는 방법-->
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!--이색은 안보임-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontStyleMain">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">35dp</item>
        <item name="android:fontFamily">@font/bmjua</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginBottom">500dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="ImageStyleMain">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="BtnStyle">
        <item name="android:fontFamily">@font/bmjua</item>
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/btn_background</item>
    </style>


</resources>
